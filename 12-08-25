#multiplicação
n1 = int(input('digite um número'))
n2 = int(input('digite o segundo número'))
print(f"a mulplicação é igual a {n1 * n2}")

#divisão
nu1 = float(input('digite um número'))
nu2 = float(input('digite o segundo número'))
print(f"a divisão é igual a {nu1 / nu2}")

# divisão inteira 
num1 = int(input('digite um número'))
num2 = int(input('digite o segundo número'))
print(f"a divisão inteira é {num1 // num2}")

#resto da divisão
numer1 = int(input('digite um número')) 
numer2 = int(input('digite o segundo número'))
print(f"o resto da divisão é {numer1 % numer2}")

#exponenciação
nume1 = int(input('digite um número'))
nume2  = int(input('digite o segundo número'))
print(f"a exponenciação desde númro é {nume1 ** nume2}")
